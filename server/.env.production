# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env and update values for production
# =====================================================

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database Configuration
DATABASE_URL=jdbc:h2:file:/app/data/expense_tracker;DB_CLOSE_ON_EXIT=FALSE;AUTO_RECONNECT=TRUE
DATABASE_USERNAME=sa
DATABASE_PASSWORD=password
DATABASE_DRIVER=org.h2.Driver
DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect
DDL_AUTO=update

# H2 Console (disable in production)
H2_CONSOLE_ENABLED=false

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_TO_SECURE_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRATION=86400000

# CORS Configuration - Update with your frontend domain
ALLOWED_ORIGINS=https://expense-tracker.kundanprojects.space,http://localhost:3000

# Security Configuration
COOKIE_SECURE=true

# Logging
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO

# File Upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB